{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,                                 
    "types": ["node", "jest"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "pretty": true,
    "declaration": true,
  },
  "include": ["./src/**/*", ".eslintrc.js"],
}
