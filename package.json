{
    "name": "@hanseltime/janus-simple-command-monorepo",
    "private": true,
    "workspaces": [
        "packages/janus-simple-command",
        "packages/dev-npm-registry-tools",
        "packages/monorepo-tools",
        "packages/jsp-ws-connection"
    ],
    "repository": "https://github.com/hanseltime/hanseltime-janus-simple-command",
    "scripts": {
        "add-one": "yarn workspace @hanseltime/${P} add",
        "build": "nx run-many --target=build",
        "build-one": "nx run @hanseltime/${P}:build",
        "build-and-push-images": "nx run-many --target=build-and-push-image",
        "build-image-local-one": "nx run @hanseltime/${P}:build-image-local",
        "dev-init": "./bin/dev-init.sh",
        "lint": "eslint .",
        "new-lib": "new-package lib --pkgDir packages",
        "release": "yarn build && multi-semantic-release",
        "after-release": "setup-deps-for-workspaces",
        "unit-test": "nx run-many --target=unit-test",
        "unit-test-one": "nx run @hanseltime/${P}:unit-test",
        "int-test": "nx run-many --target=int-test",
        "int-test-one": "nx run @hanseltime/${P}:int-test",
        "postinstall": "husky install",
        "prepack": "pinst --disable",
        "postpack": "pinst --enable",
        "publish-local": "yarn build && yarn workspaces foreach run publish-local",
        "use-local-registry": "use-local-registry"
    },
    "engines": {
        "node": ">=18"
    },
    "devDependencies": {
        "@babel/core": "^7.20.12",
        "@commitlint/config-angular": "^17.4.2",
        "@hanseltime/dev-npm-registry-tools": "workspace:^",
        "@hanseltime/monorepo-tools": "workspace:^",
        "@qiwi/multi-semantic-release": "^6.5.1",
        "@types/glob": "^8",
        "@types/jest": "^29.2.5",
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.48.2",
        "@typescript-eslint/parser": "^5.48.1",
        "@yarnpkg/pnpify": "^4.0.0-rc.33",
        "commitlint": "^17.4.2",
        "corepack": "^0.15.2",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-deprecation": "^1.3.2",
        "eslint-plugin-no-only-tests": "^3.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "fs-extra": "^11.1.0",
        "glob": "^8.1.0",
        "handlebars": "^4.7.7",
        "husky": "^8.0.3",
        "nx": "^15.5.2",
        "prettier": "^2.8.0",
        "ts-node": "^10.9.1",
        "typescript": "4.9.4",
        "yargs": "^17.6.2"
    },
    "resolutions": {
        "@types/jest": "^29.2.3",
        "@types/node": "^18.11.11",
        "jest": "^29.3.1",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "4.9.3"
    },
    "packageManager": "yarn@3.4.1"
}
